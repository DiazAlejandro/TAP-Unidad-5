<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultarUsuario">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="16dp">

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="660sp"
            android:layout_marginRight="30sp"
            android:onClick="irInicio"
            android:text="regresar" />

        <TextView
            android:id="@+id/id_buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="90sp"
            android:text="Clave:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="150sp"
            android:text="Nombre:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="30sp"
            android:gravity="center"
            android:text="Consultar Informacion"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="220sp"
            android:text="Cintura:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="290sp"
            android:text="Cadera:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="350sp"
            android:text="Sexo:"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="520sp"
            android:layout_marginRight="30sp"
            android:onClick="borrarRegistro"
            android:text="Borrar" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="590sp"
            android:layout_marginRight="30sp"
            android:onClick="actualizarUsuario"
            android:text="Actualizar" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="450sp"
            android:layout_marginRight="30sp"
            android:onClick="calculoICC"
            android:text="Calcular" />

        <EditText
            android:id="@+id/idConsulta"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150sp"
            android:layout_marginTop="90sp"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280sp"
            android:layout_marginTop="90sp"
            android:onClick="consultar"
            android:text="BUSCAR" />

        <TextView
            android:id="@+id/nombreConsulta"
            android:layout_width="213dp"
            android:layout_height="43dp"
            android:layout_marginLeft="150sp"
            android:layout_marginTop="150sp"
            android:gravity="clip_vertical|center_vertical"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/caderaConsulta"
            android:layout_width="213dp"
            android:layout_height="43dp"
            android:layout_marginLeft="150sp"
            android:layout_marginTop="290sp"
            android:gravity="clip_vertical|center_vertical"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/cinturaConsulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150sp"
            android:layout_marginTop="220sp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textSize="18sp"/>

        <RadioGroup
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="400sp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/mujer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mujer" />

            <RadioButton
                android:id="@+id/hombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hombre" />
        </RadioGroup>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>